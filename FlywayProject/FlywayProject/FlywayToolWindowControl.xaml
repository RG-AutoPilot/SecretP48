<UserControl x:Class="FlywayProject.VariableToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             MinWidth="400">
    <Border Margin="20" Padding="20" CornerRadius="8" Background="#FFBFE5FF" BorderBrush="#DDD" BorderThickness="1">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Stretch" MaxWidth="600">
            <TextBlock FontSize="18" FontWeight="SemiBold" Foreground="#2B2B2B" Margin="0,0,0,20"><Run Text="Flyway "/><Run Language="en-gb" Text="AutoPilot GUI"/></TextBlock>

            <!-- Field 1 -->
            <TextBlock Text="Flyway Directory" FontWeight="Bold" Foreground="#333"/>
            <TextBox Name="Var1TextBox" Margin="0,5,0,15" Background="#FFF" BorderBrush="#CCC" BorderThickness="1" Padding="5"/>

            <!-- Field 2 -->
            <TextBlock FontWeight="Bold" Foreground="#333"><Run Language="en-gb" Text="Comparison "/><Run Text="Source"/></TextBlock>
            <TextBox Name="Var2TextBox" Margin="0,5,0,15" Background="#FFF" BorderBrush="#CCC" BorderThickness="1" Padding="5"/>

            <!-- Field 3 -->
            <TextBlock FontWeight="Bold" Foreground="#333"><Run Text="Target"/><Run Language="en-gb" Text=" Environment"/></TextBlock>
            <TextBox Name="Var3TextBox" Margin="0,5,0,15" Background="#FFF" BorderBrush="#CCC" BorderThickness="1" Padding="5"/>

            <!-- Field 4 -->
            <TextBlock Text="Additional Parameters" FontWeight="Bold" Foreground="#333"/>
            <TextBox Name="Var4TextBox" Margin="0,5,0,20" Background="#FFF" BorderBrush="#CCC" BorderThickness="1" Padding="5"/>

            <Separator Margin="0,0,0,20"/>

            <Button Content="Deploy"
                    Width="120"
                    Height="32"
                    HorizontalAlignment="Center"
                    Background="#FF67C2FF"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="SemiBold"
                    Cursor="Hand"
                    Click="OnSubmitClicked">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#007ACC"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="6,2"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="4"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#003F6B"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Border>
</UserControl>
